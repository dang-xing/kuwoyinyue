
.song-wrap{
}
.song-bg{
	background-color: rgba(255,255,255,0.6);
	text-align: center;
}
.song-img {
	width: 500rpx;
	height: 500rpx;
	border: 10rpx solid rgba(255,228,67,0.8);
	border-radius: 50%;
	display: inline-block;
	margin-top: 120rpx;
	position: relative;
}
.song-img image{
	width: 100%;
	height: auto;
	border-radius: 50%;
}
.song-play-btn{
	width: 120rpx;
	height: 120rpx;
	background-color: rgba(000,000,000,0.5);
	position: absolute;
	left: 190rpx;
	top:190rpx;
	border-radius: 50%;
	text-align: center;
	display: -webkit-box;
	display: -webkit-flex;
	display: -ms-flexbox;
	display: flex;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
	-webkit-box-pack: center;
	-webkit-justify-content: center;
	    -ms-flex-pack: center;
	        justify-content: center;
}
.song-play-btn image{
	width: 90rpx;
	display: inline-block;
	margin-left: 5rpx;
}
.song-list {
	text-align: center;
	margin-top: 30rpx;
	height: 300rpx;
	overflow: hidden;
}
.song-list text{
	display: block;
	margin: 0 auto;
	font-size: 30rpx;
	color: #666;
	height: 60rpx;
	line-height: 60rpx;
}
.active{
	color: #ffe443 !important;
	font-size: 36rpx !important;
}

